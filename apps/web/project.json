{
  "name": "@jigswap/web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/web/src",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{projectRoot}/.next"],
      "defaultConfiguration": "production",
      "options": {},
      "configurations": {
        "development": {
          "outputPath": ".next"
        },
        "production": {
          "outputPath": ".next"
        },
        "analyze": {
          "env": {
            "ANALYZE": "true"
          }
        }
      }
    },
    "dev": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@jigswap/web:build:development",
        "dev": true,
        "turbo": true
      },
      "configurations": {
        "development": {
          "buildTarget": "@jigswap/web:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "@jigswap/web:build:production",
          "dev": false
        }
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "@jigswap/web:build:production",
        "dev": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/web/src/**/*.{ts,tsx,js,jsx}",
          "apps/web/components/**/*.{ts,tsx,js,jsx}",
          "apps/web/lib/**/*.{ts,tsx,js,jsx}",
          "apps/web/convex/**/*.{ts,tsx,js,jsx}"
        ]
      },
      "configurations": {
        "fix": {
          "fix": true
        }
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm run type-check",
        "cwd": "apps/web"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf .next out dist",
        "cwd": "apps/web"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build web", "nx start web"],
        "parallel": false
      }
    },
    "convex-dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex dev",
        "cwd": "apps/web"
      }
    },
    "convex-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "convex deploy",
        "cwd": "apps/web"
      }
    },
    "crowdin-upload": {
      "executor": "nx:run-commands",
      "options": {
        "command": "crowdin upload sources",
        "cwd": "apps/web"
      }
    },
    "crowdin-download": {
      "executor": "nx:run-commands",
      "options": {
        "command": "crowdin download",
        "cwd": "apps/web"
      }
    }
  },
  "tags": ["type:app", "scope:web"]
}
